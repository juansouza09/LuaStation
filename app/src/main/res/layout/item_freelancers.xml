<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_container"
        android:layout_width="175dp"
        android:layout_height="235dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape_branco" />

    <TextView
        android:id="@+id/title_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Maxsuel Souza"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/item_container"
        app:layout_constraintStart_toStartOf="@+id/item_container"
        app:layout_constraintTop_toBottomOf="@id/img_person" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="max.souza@email.com"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/item_container"
        app:layout_constraintStart_toStartOf="@id/item_container"
        app:layout_constraintTop_toBottomOf="@id/title_name_text" />

    <ImageView
        android:id="@+id/img_person"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/item_container"
        app:layout_constraintStart_toStartOf="@+id/item_container"
        app:layout_constraintTop_toTopOf="@+id/item_container"
        android:src="@drawable/img_person" />

    <ImageButton
        android:id="@+id/btn_favoritar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/item_container"
        app:layout_constraintTop_toTopOf="@id/item_container"
        app:srcCompat="@drawable/ic_heart"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/button_finalizar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_login"
        app:layout_constraintBottom_toBottomOf="@id/item_container"
        app:layout_constraintEnd_toEndOf="@id/item_container"
        app:layout_constraintStart_toStartOf="@id/item_container"
        app:layout_constraintTop_toBottomOf="@id/email_text"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ver_mais_text"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button_finalizar"
        app:layout_constraintEnd_toEndOf="@+id/button_finalizar"
        app:layout_constraintStart_toStartOf="@+id/button_finalizar"
        app:layout_constraintTop_toTopOf="@+id/button_finalizar" />

</androidx.constraintlayout.widget.ConstraintLayout>